<style>
  nav {
    top: 0;
    padding: 1em var(--padding-x);
    position: sticky;
    height: 3rem;
    background-color: rgb(var(--base-100-bg));
    display: flex;
    justify-content: space-between;
  }

  ul {
    display: flex;
    align-items: center;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  li {
    /* display: inline-block; */
    height: auto;
  }

  /* Dropdown */
  ul ul {
    display: none;
    position: absolute;
    background-color: rgb(var(--base-200-bg));
    z-index: 50;
  }

  ul > li:hover > ul {
    display: inherit;
  }

  .logo {
    padding-right: 2rem;
  }

  .logo img {
    height: 2rem;
  }

  .divider {
    margin: 1em;
    border: var(--border);
    border-radius: var(--radius);
  }

  .icon {
    font-size: 1.2em;
  }
